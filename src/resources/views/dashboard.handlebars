

<div class="container mt-4">
    <div class="row">

        {{!-- Nội dung Dashboard --}}
        <div class="col-md-9">
            <h2 class="mb-4">Dashboard</h2>

            <div class="row">
                {{!-- Tổng số sản phẩm --}}
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Tổng số sản phẩm</h5>
                            <p class="card-text display-4">{{totalProducts}}</p>
                        </div>
                    </div>
                </div>

                {{!-- Tổng số đơn hàng --}}
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Tổng số đơn hàng</h5>
                            <p class="card-text display-4">{{totalOrders}}</p>
                        </div>
                    </div>
                </div>

                {{!-- Doanh thu --}}
                <div class="col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <h5 class="card-title">Doanh thu</h5>
                            <p class="card-text display-4">{{totalRevenue}} $</p>
                        </div>
                    </div>
                </div>
            </div>

            {{!-- Danh sách sản phẩm --}}
            <div class="mt-4">
                <h3>Danh sách sản phẩm gần đây</h3>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each products}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.price}} $</td>
                            <td>{{this.status}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
